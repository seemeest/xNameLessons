<Window x:Class="xNameLessons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xNameLessons"
        mc:Ignorable="d"
        Title="Zadanie1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <!--панель с кнопками-->
        <StackPanel   Background="Blue">
            <TextBox  Background="White" Margin="0 10 0 10" Name="tboxDo"> </TextBox>
            <Button x:Name="button" Content="Button"  Click="button_Click"/>
            <Button x:Name="buttonClear" Content="Clear" Click="buttonClear_Click"/>
        
       
        </StackPanel>
        <!--панель для вывода-->
        <StackPanel x:Name="Panel" Grid.Column="1">
            
        </StackPanel>

    </Grid>
</Window>
